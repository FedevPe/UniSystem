<div class="container-fluid">
    <div class="row">
        <div class="col bg-white mt-3 p-3 shadow rounded-3">
            <button @onclick="ToggleCollapse" class="@buttonClass" data-bs-toggle="collapse" data-bs-target="#formPsychophysycal">
                <i class="@buttonIcon me-2"></i> @buttonText
            </button>
            <section class="container-fluid">
                <div class="mt-3 collapse" id="formPsychophysycal">
                    <div class="row mt-2">
                        <div class="form-floating col-lg-5 mx-auto mb-2">
                            <select class="form-select" id="BloodType" placeholder="Nombre"></select>
                            <label class="form-label ms-2" for="BloodType">Tipo de Sangre</label>
                            <div class="row mt-4">
                                <div class="col-lg-11 mx-auto mb-2 border-bottom border-secondary">
                                    <span>Enfermedades</span>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Asma bronquial</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Fiebre reumática</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Ulcera gastroduodenal</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Enfermedades cardíacas</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Tuberculosis</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Otra Enfermedad</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Diabetes</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Convulsiones</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Vértigos o mareos</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Hipertensión arterial</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Dolor de cabeza severo</label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-lg-11 mx-auto mb-2 border-bottom border-secondary">
                                    <span>Vacunas</span>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Difteria</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Viruela</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Hepatitis</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Tétanos</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Polio</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Otras</label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating col-lg-5 mx-auto mb-2 ">
                            <select class="form-select" id="MedicalInsurance" placeholder="Nombre"></select>
                            <label class="form-label ms-2" for="MedicalInsurance">Obra Social</label>
                            <div class="row mt-4">
                                <div class="col-lg-11 mx-auto mb-2 border-bottom border-secondary">
                                    <span>Alergias</span>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Suero</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Drogas</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-5 mx-auto mb-2 mt-2">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Alimentos</label>
                                        </li>
                                        <li class="list-group-item">
                                            <input class="form-check-input" type="checkbox" id="">
                                            <label class="form-check-label ms-2" for="">Otros</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="mt-4">
                                    <div class="col-lg-11 mx-auto mb-2">
                                        <span>Comentarios Adicionales: </span>
                                        <textarea class="form-control w-100 mt-3" style="height: 150px;" name="" id="aditionalComments">
                                            </textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@code {
    private bool isCollapsed = true;

    private string buttonText = "Añadir Psicofísico";
    private string buttonClass = "btn btn-success";
    private string buttonIcon = "fa-regular fa-square-plus";

    private void ToggleCollapse()
    {
        isCollapsed = !isCollapsed;

        if (isCollapsed)
        {
            buttonText = "Añadir Psicofísico";
            buttonClass = "btn btn-success";
            buttonIcon = "fa-regular fa-square-plus";
        }
        else
        {
            buttonText = "Eliminar Psicofísico";
            buttonClass = "btn btn-danger";
            buttonIcon = "fa-solid fa-trash-can";
        }
    }
}
